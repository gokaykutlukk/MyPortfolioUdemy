@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/LayoutController1/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İstatistikler</h4>

        <div class="row">
            <!-- Mevcut kartların olduğu alan (senin verdiğin haliyle) -->
            <div class="col-md-3">
                <div class="card card-stats card-warning">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-users"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Yetenek Sayısı</p>
                                    <h4 class="card-title">@ViewBag.v1</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Diğer kartlar... (v2, v3, v4) -->
            <div class="col-md-3">
                <div class="card card-stats card-success">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-bar-chart"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Toplam Mesaj</p>
                                    <h4 class="card-title">@ViewBag.v2</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card card-stats card-danger">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-newspaper-o"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Okunmayanlar</p>
                                    <h4 class="card-title">@ViewBag.v3</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card card-stats card-primary">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-5">
                                <div class="icon-big text-center">
                                    <i class="la la-check-circle"></i>
                                </div>
                            </div>
                            <div class="col-7 d-flex align-items-center">
                                <div class="numbers">
                                    <p class="card-category">Okunanlar</p>
                                    <h4 class="card-title">@ViewBag.v4</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />

        <!-- Grafikler için yeni satır -->
        <div class="row">
            <div class="col-md-6">
                <div class="card card-stats card-info">
                    <div class="card-body">
                        <h5>Yetenek ve Mesajlar Bar Grafiği</h5>
                        <canvas id="barChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card card-stats card-info">
                    <div class="card-body">
                        <h5>Mesaj Durumu Pasta Grafiği</h5>
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Bar grafik (Yetenek, Toplam Mesaj, Okunmayan, Okunan)
        const ctxBar = document.getElementById('barChart').getContext('2d');
        const barChart = new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: ['Yetenek', 'Toplam Mesaj', 'Okunmayan Mesaj', 'Okunan Mesaj'],
                datasets: [{
                    label: 'İstatistikler',
                    data: [@ViewBag.v1, @ViewBag.v2, @ViewBag.v3, @ViewBag.v4],
                    backgroundColor: [
                        'rgba(255, 206, 86, 0.7)',
                        'rgba(54, 162, 235, 0.7)',
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(75, 192, 192, 0.7)'
                    ]
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true, precision: 0 }
                }
            }
        });

        // Pasta grafik (Okunmayan ve Okunan Mesajlar)
        const ctxPie = document.getElementById('pieChart').getContext('2d');
        const pieChart = new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: ['Okunmayan Mesajlar', 'Okunan Mesajlar'],
                datasets: [{
                    label: 'Mesaj Durumu',
                    data: [@ViewBag.v3, @ViewBag.v4],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.7)',
                        'rgba(54, 162, 235, 0.7)'
                    ]
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
}
